PROFILE=quick-test


LIVE_MODE=true
TESTNET=true
STUB_MODE=false
PAPER_MODE=false

BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_CATEGORY=linear
BYBIT_SYMBOL=BTCUSDT

# ── Risk & Sizing ────────────────────────────────────────────────────
LEVERAGE=7                    # 10→7로 완화(알트 변동성 대비)
MAX_ALLOC_PCT=0.02           # 2%/trade 상한
MIN_FREE_BALANCE_USDT=100
ORDER_SIZE_USDT=50           # 테스트넷 고정 공사이즈(실전 전환시 비워도 됨)
RISK_PER_TRADE=0.003         # (옵션) 계좌대비 0.3% 리스크 타겟

# ── Execution / Slippage ─────────────────────────────────────────────
SLIPPAGE_GUARD_PCT=0.0015     # 0.10% (BTC/ETH). 알트면 0.0015 고려
DRY_RUN=false

# Optional private WS stream of order/execution/position
ENABLE_PRIVATE_WS=false

# ── Market Regime / Microstructure ───────────────────────────────────
MIS_SPREAD_THRESHOLD=0.01  # 유지
SPREAD_PAUSE_MULT=10.0        # 유지
MIN_DEPTH_USD=200          # 15000 → 50000으로 상향

# ── Funding window avoidance ─────────────────────────────────────────
AVOID_TAKER_WITHIN_MIN=5     # 유지

# ── TP/SL & Time stop ────────────────────────────────────────────────
TP_PCT=0.0010                # 0.12% (기존 0.10%)
SL_PCT=0.0012                # 0.15% (기존 0.20% → RR 개선)
TRAIL_AFTER_TP1_PCT=0.0008   # 유지(체결 후 끌고가기)
TIME_STOP_SEC=480            # 20분 → 10분(1분 스캘핑에 맞춤)

# ── Universe / Rotation ──────────────────────────────────────────────
SYMBOL_UNIVERSE=BTCUSDT,ETHUSDT,SOLUSDT
DISCOVER_SYMBOLS=false
UNIVERSE_TOP_N=12            # 10 → 12(유동성 상위 확장)
CONSENSUS_TICKS=1            # 3 → 5(신호 품질 보수화)
NO_TRADE_SLEEP_SEC=5
# Small pause when switching symbols
LOOP_IDLE_SEC=1
# Exit key (press in terminal to stop)
EXIT_KEY=q
# Default category and leverage if not provided elsewhere
CATEGORY=linear
LEVERAGE_DEFAULT=7
POSITION_MODE=ONEWAY
MAX_OPEN_TRADES=1            # 동시 포지션 제한 유지
