LIVE_MODE=true
TESTNET=true
STUB_MODE=false
PAPER_MODE=false

BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_CATEGORY=linear
BYBIT_SYMBOL=BTCUSDT

LEVERAGE=10
MAX_ALLOC_PCT=0.05
MIN_FREE_BALANCE_USDT=100
SLIPPAGE_GUARD_PCT=0.003
DRY_RUN=false

# Optional private WS stream of order/execution/position
ENABLE_PRIVATE_WS=false

# Strategy/regime thresholds
MIS_SPREAD_THRESHOLD=0.0004
SPREAD_PAUSE_MULT=3.0
MIN_DEPTH_USD=15000

# Funding window avoidance (skip taker orders near funding)
AVOID_TAKER_WITHIN_MIN=5

# TP/SL and trailing
TP_PCT=0.0010
SL_PCT=0.0020
TRAIL_AFTER_TP1_PCT=0.0008
TIME_STOP_SEC=1200

# Universe & Rotation
# Comma-separated list of symbols to trade. If empty and DISCOVER_SYMBOLS=true, the bot will discover top symbols.
SYMBOL_UNIVERSE=
DISCOVER_SYMBOLS=true
UNIVERSE_TOP_N=10
# How many evaluation ticks per symbol before rotating
CONSENSUS_TICKS=3
# Sleep between ticks when no consensus for current symbol
NO_TRADE_SLEEP_SEC=5
# Small pause when switching symbols
LOOP_IDLE_SEC=1
# Exit key (press in terminal to stop)
EXIT_KEY=q
# Default category and leverage if not provided elsewhere
CATEGORY=linear
LEVERAGE_DEFAULT=10
# Position mode: ONEWAY or HEDGE (not enforced by API here, informational)
POSITION_MODE=ONEWAY
# Fixed order notional in USDT for testnet (overrides equity*MAX_ALLOC_PCT when >0)
ORDER_SIZE_USDT=50
# Optional fraction of equity per trade (notional sizing). Leave empty to disable.
RISK_PER_TRADE=
# Max concurrent open trades (for future multi-symbol positions)
MAX_OPEN_TRADES=1
